<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DinnerRoulette.XamarinForms.App">
    <Application.Resources>
        <StyleSheet Source="/Resources/Assets/Style.css" />
        <ResourceDictionary>
            <Color x:Key="BackGroundColor">#0e0603</Color>
            <Style x:Key="Font" TargetType="Button">
                <Setter Property="FontFamily" Value="Courgette"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>